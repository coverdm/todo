<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.dawid.todo.activities.TaskEditorActivity">


    <TextView
        android:id="@+id/name_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#Title:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/title_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_update"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/description_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_input_update"
        android:layout_marginTop="20dp"
        android:text="#Description:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/description_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_update"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/priority_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_input_update"
        android:layout_marginTop="20dp"
        android:text="#Priority:"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/priority_choose_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priority_update"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/priority_none_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/priority_normal_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/priority_high_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="update" />

</android.widget.RelativeLayout>
