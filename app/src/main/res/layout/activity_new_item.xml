<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dawid.todo.activities.TaskCreatorActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#Title:"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"

        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title_input"
        android:layout_height="wrap_content"
        android:text="#Description:"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/description_input"
        android:layout_height="wrap_content"
        android:text="#Priority:"
        android:textSize="20sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priority"
        android:layout_marginTop="10dp"
        android:id="@+id/priority_choose">

        <RadioButton
            android:id="@+id/priority_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/priority_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/priority_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp"/>

    </RadioGroup>

    <Button
        android:id="@+id/createBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="create" />


</android.widget.RelativeLayout>
